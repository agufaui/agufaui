{
	"name": "@agufaui/monorepo",
	"version": "0.5.0",
	"private": true,
	"packageManager": "pnpm@7.9.3",
	"description": "Vue Components Library",
	"author": "Agufa.tech <https://agufa.tech>",
	"license": "MIT",
	"workspaces": [
		"./packages/*"
	],
	"scripts": {
		"dev": "nr update && nr docs",
		"watch": "nr --filter=./packages/** -- watch",
		"build": "nr clean && nr update && nr postdep && nr --filter=./packages/** --filter=!./packages/svelte -- build && nr post && nr --filter=./packages/svelte -- build && nr docs:build",
		"build:pkg": "nr --filter=./packages/** -- build",
		"build:types": "nr -r --parallel --filter=./packages/** build:types",
		"clean": "rimraf dist types packages/.*/dist packages/auto-imports.d.ts packages/.vitepress/components.d.ts && nr -r --parallel --filter=./packages/** clean && nr -r --parallel --filter=./playground/** clean",
		"rm:node": "rimraf node_modules packages/**/node_modules playground/**/node_modules",
		"reinstall": "nr rm:node && ni",
		"docs": "vitepress dev packages",
		"docs:build": "nr update && vitepress build packages",
		"docs:serve": "vitepress serve packages",
		"lint": "eslint --ext .js,.ts,.vue --ignore-path .eslintignore .",
		"lintfix": "nr lint --fix",
		"prettier": "prettier --ignore-path .eslintignore --check .",
		"prettier:fix": "nr prettier --write",
		"format": "nr prettier:fix && nr lintfix",
		"typecheck": "nr -r --parallel --filter=./packages/** typecheck",
		"typeconfig": "vue-tsc --showConfig",
		"test": "nr --parallel --filter=./packages/** -- test",
		"coverage": "vitest run --coverage",
		"update": "nr -C packages/metadata update && tsx scripts/update.ts",
		"update:full": "nr update && nr build:types",
		"translate": "tsx scripts/translate.ts",
		"post": "tsx scripts/post.ts",
		"postdep": "tsx scripts/postdep.ts",
		"publish:ci": "tsx scripts/publish.ts",
		"prepare": "husky install"
	},
	"devDependencies": {
		"@agufaui/config": "workspace:^0.4.0",
		"@agufaui/theme": "workspace:^0.4.0",
		"@agufaui/translate": "workspace:^0.1.0",
		"@agufaui/use": "workspace:^0.4.0",
		"@antfu/ni": "^0.16.3",
		"@commitlint/cli": "^17.0.3",
		"@commitlint/config-conventional": "^17.0.3",
		"@iconify/json": "^2.1.75",
		"@testing-library/vue": "^6.6.0",
		"@types/debug": "^4.1.7",
		"@types/fs-extra": "^9.0.13",
		"@types/node": "^18.0.3",
		"@types/node-fetch": "^2.6.2",
		"@typescript-eslint/parser": "^5.32.0",
		"@unocss/extractor-pug": "^0.44.0",
		"@unocss/reset": "^0.44.0",
		"@vitejs/plugin-vue": "^3.0.3",
		"@vue/eslint-config-typescript": "^11.0.0",
		"@zolyn/vite-plugin-vue-type-imports": "^0.3.1",
		"c8": "^7.12.0",
		"debug": "^4.3.4",
		"eslint": "^8.19.0",
		"eslint-config-prettier": "^8.5.0",
		"eslint-plugin-prettier": "^4.2.1",
		"eslint-plugin-svelte3": "^4.0.0",
		"eslint-plugin-vue": "^9.2.0",
		"fs-extra": "^10.1.0",
		"gray-matter": "^4.0.3",
		"happy-dom": "^6.0.2",
		"husky": "^8.0.0",
		"lint-staged": "^13.0.3",
		"prettier": "^2.7.1",
		"prettier-plugin-svelte": "^2.7.0",
		"pug": "^3.0.2",
		"release-please": "^14.0.0",
		"rimraf": "^3.0.2",
		"shiki": "^0.10.1",
		"simple-git": "^3.10.0",
		"sitemap-ts": "^0.2.2",
		"tsup": "^6.1.3",
		"tsx": "^3.8.0",
		"typescript": "^4.7.4",
		"unocss": "0.45.7",
		"unplugin-auto-import": "^0.10.3",
		"unplugin-vue-components": "^0.21.2",
		"vite": "3.0.7",
		"vite-plugin-inspect": "^0.5.1",
		"vitepress": "1.0.0-alpha.4",
		"vitest": "^0.21.1",
		"vue": "^3.2.37",
		"vue-tsc": "^0.39.4"
	},
	"lint-staged": {
		"*.{js,ts,tsx,vue,svelte}": [
			"eslint --fix",
			"prettier --write"
		]
	},
	"engines": {
		"node": ">=16",
		"pnpm": ">=7.5.0"
	}
}