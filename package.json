{
  "name": "@agufaui/monorepo",
  "version": "0.8.0",
  "private": true,
  "packageManager": "pnpm@7.10.0",
  "description": "Vue Components Library",
  "author": "Agufa.tech <https://agufa.tech>",
  "license": "MIT",
  "workspaces": [
    "./packages/*"
  ],
  "scripts": {
    "dev": "nr update && nr docs",
    "watch": "nr --filter=./packages/** -- watch",
    "build": "nr clean && nr update && nr --filter=./packages/** --filter=!./packages/svelte --filter=!./packages/qwik -- build && nr postpkgbuild && nr --filter=./packages/svelte -- build && nr docs:build",
    "build:pkg": "nr --filter=./packages/** -- build",
    "build:types": "nr -r --parallel --filter=./packages/** build:types",
    "clean": "rimraf dist types packages/.*/dist packages/auto-imports.d.ts packages/.vitepress/components.d.ts && nr -r --parallel --filter=./packages/** clean && nr -r --parallel --filter=./playground/** clean",
    "rm:node": "rimraf node_modules packages/**/node_modules playground/**/node_modules",
    "reinstall": "nr rm:node && ni",
    "docs": "vitepress dev packages",
    "docs:build": "nr update && vitepress build packages",
    "docs:serve": "vitepress serve packages",
    "lint": "eslint --ext .js,.ts,.vue --ignore-path .eslintignore .",
    "lintfix": "nr lint --fix",
    "prettier": "prettier --ignore-path .eslintignore --check .",
    "prettier:fix": "nr prettier --write",
    "format": "nr prettier:fix && nr lintfix",
    "typecheck": "nr -r --parallel --filter=./packages/** typecheck",
    "typeconfig": "vue-tsc --showConfig",
    "test": "nr --parallel --filter=./packages/** -- test",
    "coverage": "vitest run --coverage",
    "update": "nr -C packages/metadata update && tsx scripts/update.ts",
    "update:full": "nr update && nr build:types",
    "translate": "tsx scripts/translate.ts",
    "postpkgbuild": "tsx scripts/postpkgbuild.ts",
    "postdeploy:depversion": "tsx scripts/postdeploy-depversion.ts",
    "publish:ci": "tsx scripts/publish.ts",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@agufaui/config": "workspace:^0.8.0",
    "@agufaui/theme": "workspace:^0.8.0",
    "@agufaui/translate": "workspace:^0.5.0",
    "@agufaui/use": "workspace:^0.8.0",
    "@antfu/ni": "^0.20.0",
    "@commitlint/cli": "^17.4.4",
    "@commitlint/config-conventional": "^17.4.4",
    "@iconify/json": "^2.2.28",
    "@testing-library/vue": "^6.6.1",
    "@types/debug": "^4.1.7",
    "@types/fs-extra": "^11.0.1",
    "@types/node": "^18.14.2",
    "@types/node-fetch": "^2.6.2",
    "@typescript-eslint/parser": "^5.54.0",
    "@unocss/extractor-pug": "^0.49.8",
    "@unocss/reset": "^0.49.8",
    "@vitejs/plugin-vue": "^4.0.0",
    "@vue/eslint-config-typescript": "^11.0.2",
    "@zolyn/vite-plugin-vue-type-imports": "^0.3.1",
    "c8": "^7.13.0",
    "debug": "^4.3.4",
    "eslint": "^8.35.0",
    "eslint-config-prettier": "^8.6.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-svelte3": "^4.0.0",
    "eslint-plugin-vue": "^9.9.0",
    "fs-extra": "^11.1.0",
    "gray-matter": "^4.0.3",
    "happy-dom": "^8.9.0",
    "husky": "^8.0.3",
    "lint-staged": "^13.1.2",
    "prettier": "^2.8.4",
    "prettier-plugin-svelte": "^2.9.0",
    "pug": "^3.0.2",
    "release-please": "^15.8.0",
    "rimraf": "^4.1.2",
    "shiki": "^0.14.1",
    "simple-git": "^3.16.1",
    "sitemap-ts": "^1.2.2",
    "tsup": "^6.6.3",
    "tsx": "^3.12.3",
    "typescript": "^4.9.5",
    "unocss": "0.50.2",
    "unplugin-auto-import": "^0.14.4",
    "unplugin-vue-components": "^0.23.0",
    "vite": "4.1.4",
    "vite-plugin-inspect": "^0.7.15",
    "vite-plugin-pwa": "^0.14.4",
    "vitepress": "1.0.0-alpha.45",
    "vitest": "^0.28.5",
    "vue": "^3.2.47",
    "vue-tsc": "^1.2.0"
  },
  "lint-staged": {
    "*.{js,ts,tsx,vue,svelte}": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "engines": {
    "node": ">=16",
    "pnpm": ">=7.4.0"
  }
}